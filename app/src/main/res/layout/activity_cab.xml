<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="campusshark.dhruv.swiftly.CabActivity">

    <AutoCompleteTextView
        android:id="@+id/pickUpLocation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/uber_white_40"
        android:fontFamily="serif-monospace"
        android:hint=" Select Pickup Location"
        android:textColor="@color/uber_black"
        android:textColorHint="@color/uber_black"
        android:textSize="20dp" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/pickUpLocation"
        android:layout_marginTop="30dp"
        android:background="@color/uber_white_40"
        android:fontFamily="serif-monospace"
        android:hint=" Select Drop Loction"
        android:textColor="@color/uber_black"
        android:textColorHint="@color/uber_black"
        android:textSize="20dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="198dp">

        <com.uber.sdk.android.rides.RideRequestButton
            android:id="@+id/btn_uber_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            uber:ub__style="black" />

    </RelativeLayout>

</RelativeLayout>
