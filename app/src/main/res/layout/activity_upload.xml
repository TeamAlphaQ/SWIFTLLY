<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="campusshark.dhruv.swiftly.uploadActivity">


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_camera"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="CAMERA"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintVertical_bias="0.06"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btn_gallery"
        app:layout_constraintTop_toBottomOf="@+id/btn_gallery"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn_gallery"
        app:layout_constraintBottom_toBottomOf="@+id/activity_upload"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_gallery"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="GALLERY"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintVertical_bias="0.13"
        android:layout_width="200dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_upload"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/activity_upload"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_upload" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_VIEW"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="SHOW"
        fancy:fb_textColor="#FFFFFF"
        android:layout_width="200dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_upload"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_upload"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera"
        app:layout_constraintBottom_toBottomOf="@+id/activity_upload"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="UPLOAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintBottom_toTopOf="@+id/btn_gallery"
        app:layout_constraintRight_toRightOf="@+id/activity_upload"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_upload"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:text="DOWNLOAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/btn_camera"
        app:layout_constraintLeft_toLeftOf="@+id/btn_camera"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera"
        app:layout_constraintBottom_toTopOf="@+id/btn_VIEW"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.65999997" />


</android.support.constraint.ConstraintLayout>
