<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="campusshark.dhruv.swiftly.FilesActivity">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_pan"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_passport"
        app:layout_constraintVertical_bias="0.13"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="PAN CARD"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="17dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_licence"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pan"
        app:layout_constraintVertical_bias="0.19"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="LICENCE"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="17dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_passport"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_aadhar"
        app:layout_constraintVertical_bias="0.110000014"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="PASSPORT"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="17dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_aadhar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="AADHAR CARD"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="17dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_other_file"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_licence"
        app:layout_constraintVertical_bias="0.13"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="OTHER FILES"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="17dp" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/btn_other_file"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_other_file"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/teal1"
        fab:fab_addButtonColorPressed="@color/teal1"
        fab:fab_addButtonPlusIconColor="@color/teal1"
        fab:fab_labelStyle="@style/menu_labels_style"
        app:layout_constraintHorizontal_bias="1.0">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gallery"
            fab:fab_colorNormal="@color/orange"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="Call a cab" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nearme"
            fab:fab_colorNormal="@color/material_blue_500"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="Nearby Places" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nearme"
            fab:fab_colorNormal="@color/cpb_green"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="Register for Live Tracking" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nearme"
            fab:fab_colorNormal="@color/orange"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="Start Live Tracking" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nearme"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="Grievance" />


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nearme"
            fab:fab_colorNormal="@color/cpb_green"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="Crisis Management" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nearme"
            fab:fab_colorNormal="@color/orange"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_title="HOME" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.constraint.ConstraintLayout>
