<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="campusshark.dhruv.swiftly.FilesActivity">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_pan"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="PAN CARD"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="@+id/activity_files"
        app:layout_constraintLeft_toLeftOf="@+id/activity_files"
        app:layout_constraintBottom_toBottomOf="@+id/activity_files"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_passport"
        app:layout_constraintVertical_bias="0.13" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_licence"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="LICENCE"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="@+id/activity_files"
        app:layout_constraintLeft_toLeftOf="@+id/activity_files"
        app:layout_constraintBottom_toBottomOf="@+id/activity_files"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_pan"
        app:layout_constraintVertical_bias="0.19" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_passport"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="PASSPORT"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="@+id/activity_files"
        app:layout_constraintLeft_toLeftOf="@+id/activity_files"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_aadhar"
        app:layout_constraintBottom_toBottomOf="@+id/activity_files"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.110000014" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_aadhar"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="AADHAR CARD"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="@+id/activity_files"
        app:layout_constraintLeft_toLeftOf="@+id/activity_files"
        app:layout_constraintTop_toTopOf="@+id/activity_files"
        app:layout_constraintBottom_toBottomOf="@+id/activity_files"
        app:layout_constraintVertical_bias="0.06"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_other_file"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff3e37"
        fancy:fb_focusColor="#ff6060"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_textSize="17dp"
        fancy:fb_text="OTHER FILES"
        fancy:fb_textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="@+id/activity_files"
        app:layout_constraintLeft_toLeftOf="@+id/activity_files"
        app:layout_constraintTop_toBottomOf="@+id/btn_licence"
        app:layout_constraintVertical_bias="0.13"
        android:layout_marginTop="32dp"
        android:layout_width="200dp"
        android:layout_height="60dp" />


</android.support.constraint.ConstraintLayout>
